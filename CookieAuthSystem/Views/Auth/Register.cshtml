@using Microsoft.AspNetCore.Mvc.TagHelpers
@using WebApplication0.Extensions
@model BLL.Models.Auth.RegisterRequest

@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery

@{
    ViewData["Register"] = "Login";
}

@section Style
{
    <link rel="stylesheet" href="~/css/auth/login.css" asp-append-version="true"/>
}

@using (Html.BeginForm("Register", "Auth", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-container">
            <label class="input-label" for="InputValue">Email:</label>
        @Html.ValidationMessageFor(m => m.Email)
        @Html.TextBoxFor(m => m.Email, new { @class = "input-field" })

        <label class="input-label" for="InputValue">Nick:</label>
        @Html.ValidationMessageFor(m => m.Nick)
        @Html.TextBoxFor(m => m.Nick, new { @class = "input-field" })

        <label class="input-label" for="InputValue">Password:</label>
        @Html.ValidationMessageFor(m => m.Password)
        @Html.TextBoxFor(m => m.Password, new { @class = "input-field" })

         <label class="input-label" for="InputValue">Password:</label>
                @Html.ValidationMessageFor(m => m.ConfirmPassword)
                @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "input-field" })

        <button type="submit" class="submit-button">Submit</button>
    </div>
}